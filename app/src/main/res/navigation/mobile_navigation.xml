<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_listar">

    <fragment
        android:id="@+id/nav_listar"
        android:name="com.example.catalogodeproductostp3.ui.listar.ListarFragment"
        android:label="@string/listar"
        tools:layout="@layout/fragment_listar" />
    <fragment
        android:id="@+id/nav_busqueda"
        android:name="com.example.catalogodeproductostp3.ui.busqueda.BusquedaFragment"
        android:label="@string/busqueda"
        tools:layout="@layout/fragment_busqueda" >
        <action
            android:id="@+id/action_nav_busqueda_to_nav_detalle2"
            app:destination="@id/nav_detalle" />
    </fragment>
    <fragment
        android:id="@+id/nav_detalle"
        android:name="com.example.catalogodeproductostp3.ui.busqueda.DetalleDelProductoFragment"
        android:label="@string/detalle_del_producto"
        tools:layout="@layout/fragment_detalle_del_producto" >
        <action
            android:id="@+id/action_nav_detalle_to_nav_busqueda2"
            app:destination="@id/nav_busqueda" />
    </fragment>
    <fragment
        android:id="@+id/nav_cargar"
        android:name="com.example.catalogodeproductostp3.ui.cargar.CargarFragment"
        android:label="@string/cargar"
        tools:layout="@layout/fragment_cargar" />

    <fragment
        android:id="@+id/nav_salir"
        android:name="com.example.catalogodeproductostp3.ui.salir.SalirFragment"
        android:label="@string/salir"
        tools:layout="@layout/fragment_salir" />
</navigation>